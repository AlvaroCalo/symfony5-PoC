{% extends 'base.html.twig' %} {% block title %}Donostia news {% endblock %} {% block body %}
<div class="fluid-container">
    <!-- ======= About Section ======= -->
    <section id="about" class="about">
        <div class="container-fluid">

            <div class="row">
                <div class="col-lg-12 align-items-stretch video-box">
                    <h1>News list</h1>
                    {% for mensaje in app.flashes("exito") %}
                    <div class="alert alert-success">
                        {{mensaje}}
                    </div>
                    {% endfor %}
                    <a href="{{path('noticias.anadir')}}">Add news</a>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Title</th>
                                <th>Description</th>
                                <th>Picture</th>
                                <th>Show</th>
                                <th>Remove</th>
                                <th>Update</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for noticia in noticias %}
                            <tr>
                                <td>{{noticia.id}}</td>
                                <td>{{noticia.Titulo}}</td>
                                <td>{{noticia.Descripcion}}</td>
                                <td>{{noticia.Imagen}}</td>
                                <td><a href="{{path('mostrarN', {id:noticia.id})}}">Show news</a></td>
                                <td><a href="{{path('noticias.borrar', {id:noticia.id})}}">Remove</a></td>
                                <td><a href="{{path('noticias.modificarM', {id:noticia.id})}}">Update</a></td>
                            </tr>
                            {% endfor %}
                        </tbody>

                    </table>
                </div>

            </div>

        </div>
    </section>
    <!-- End About Section -->
</div>
{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}Typical dishes in Donostia
{% endblock %}

{% block body %}
	<div
		class="fluid-container">
		<!-- ======= About Section ======= -->
		<section id="about" class="about">
			<div class="container-fluid">

				<h1>Update drink</h1>
						<form action="{{path('bebidas.modificar')}}" method="POST" class="text-center">
							<div class="form-group">
								<input type="hidden" class="form-control" id="txtId" name="txtId" value="{{bebida.Id}}">
							</div>
							<div class="form-group">
								<label for="txtName">Drink name</label>
								<input type="text" class="form-control" id="txtName" name="txtName" value="{{bebida.Nombre}}">
							</div>
							<div class="form-group">
								<label for="txtDesc">Drink description</label>
								<input type="text" class="form-control" id="txtDesc" name="txtDesc" value="{{bebida.Descripcion}}">
							</div>
							<div class="form-group">
								<label for="txtPri">Drink price</label>
								<input type="number" class="form-control" id="txtPri" name="txtPri" value="{{bebida.Precio}}">
							</div>
							<div class="form-group">
								<label for="txtPic">Drink picture</label>
								<input type="text" class="form-control" id="txtPic" name="txtPic" value="{{bebida.Imagen}}">
							</div>
							<button type="submit" class="btn btn-primary">Submit</button>
						</form>

			</div>
		</section>
		<!-- End About Section -->
	</div>

{% endblock %}
